<?xml version="1.0"?>
<!--
  hive-site.xml : Configuration principale de Hive.
  Ce fichier indique où se trouve la base du metastore
  et comment Hive doit interagir avec HDFS et Spark.
-->
<configuration>

    <!-- URL de connexion à la base PostgreSQL du metastore -->
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:postgresql://hive-metastore:5432/metastore</value>
    </property>

    <!-- Driver JDBC PostgreSQL -->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>org.postgresql.Driver</value>
    </property>

    <!-- Identifiants du métastore -->
    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>hive</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>hivepassword</value>
    </property>

    <!-- Création automatique des tables du metastore -->
    <property>
        <name>datanucleus.schema.autoCreateTables</name>
        <value>true</value>
    </property>

    <!-- Adresse du métastore Hive -->
    <property>
        <name>hive.metastore.uris</name>
        <value>thrift://hive-metastore:9083</value>
    </property>

    <!-- Dossier temporaire Hive -->
    <property>
        <name>hive.exec.scratchdir</name>
        <value>/tmp/hive</value>
    </property>

</configuration>
