<?xml version="1.0"?>
<!--
  core-site.xml : Paramètres essentiels du système Hadoop.
  Ici, on indique où se trouve le NameNode et où Hadoop stocke ses fichiers temporaires.
-->
<configuration>

    <!-- Adresse du système de fichiers principal (HDFS) -->
    <!-- Toutes les applications (Hive, Spark, NiFi) utiliseront cette URL pour accéder aux données -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://namenode:8020</value>
    </property>

    <!-- Répertoire temporaire utilisé par Hadoop -->
    <!-- Important pour stocker des fichiers transitoires lors de l'exécution -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/hadoop/tmp</value>
    </property>

